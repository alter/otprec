<h1>OneTimePassword recorder</h1>

<%= form_tag otprec_create_path do %>
  <%= text_area :myform, :text, :value => 'Type password here...', :cols => 100, :rows => 10  %>
  <br/>
  <%= label_tag "How many days store this link" %>
  <br/> 
  <%= number_field_tag :store_days, nil, in: 1..31, step: 1, :value => 1 %>
  <br/>
  <%= submit_tag "Save" %>
<% end %>
