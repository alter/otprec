<h1>OneTimePassword</h1>
<%= form_tag otprecs_path, html: {:class => 'pure-form pure-form-stacked'} do %>
  <div class="pure-control-group">
  <%= text_area :myform, :text, :placeholder => 'Type message here...', :cols => 100, :rows => 10  %>
  </div>
  <div class="pure-control-group">
  <%= text_field :myform, :passphrase, :placeholder => 'Type passphrase here for encrypting message here...', :size =>100 %>
  </div>
  <div class="pure-control-group">
  <%= label_tag "Storage time" %>
  <%= number_field_tag :store_days, nil, in: 1..31, step: 1, :value => 1 %>
  <%= label_tag "day(s)" %>
  <div class="pure-control-group">
    <input type="button" onclick="javascript:void(0)" class="subclick pure-button pure-button-primary" value="Save"/>
  </div>
<% end %>

<%= javascript_tag do %>
  document.getElementById("myform_text").select();
<% end %>
